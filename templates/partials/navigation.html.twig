<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="{{ home_url }}">
            <img src="{{ url('theme://images/logo/' ~ logo_file) }}"
                alt="{{ site.title }} logo"
                height="28" />
        </a>

        <a role="button"
            class="navbar-burger"
            aria-label="menu"
            aria-expanded="false"
            data-target="main-navbar">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="main-navbar" class="navbar-menu">
        <div class="navbar-start">
            {% for page in pages.children %}
                {% if page.visible %}
                    {% set counter = 0 %}
                    {% for child in page.children %}
                        {% if child.modular is empty %}
                            {% set counter = counter + 1 %}
                        {% endif %}
                    {% endfor %}
                    {% if
                        counter is same as(0)
                            or not config.theme.dropdown.enabled %}
                        <a class="navbar-item" href="{{ page.url }}">
                            {{ page.title }}
                        </a>
                    {% else %}
                        <div class="navbar-item has-dropdown is-hoverable">
                            <a class="navbar-link" href="{{ page.url }}">
                                {{ page.title }}
                            </a>
                            <div class="navbar-dropdown">
                                {% for child in page.children %}
                                    <a class="navbar-item"
                                        href="{{ child.url }}">
                                        {{ child.title }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</nav>
