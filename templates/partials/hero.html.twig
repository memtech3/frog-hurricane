{% if hero.appearance.color %}
  {% set color = "is-" ~ hero.appearance.color %}
{% else %}
  {% set color = "is-primary" %}
{% endif %}
<section class="hero {{ color }} {% if hero.appearance.height %}is-{{hero.appearance.height}}{% endif %} {% if hero.backgroundimage.image %}has-background{% endif %}">
  {% if hero.backgroundimage.image %}
    <img src="{{hero.backgroundimage.image}}" alt="" class="hero-background is-transparent">
  {% endif %}
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1">
        {% if hero.content.title %}
          {{ hero.content.title }}
        {% else %}
          {{page.title}}
        {% endif %}
      </h1>
      {% if hero.content.subtitle %}
        <p class="subtitle is-4">
          {{ hero.content.subtitle }}
        </p>
      {% endif %}
      {% for button in hero.content.buttons %}
        <a href="" class="button is-{{ button.color }}">
          {{ button.text }}
        </a>
      {% endfor %}
    </div>
  </div>
</section>